<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--接口全路径-->
<mapper namespace="com.hui.gmall.manage.mapper.SpuSaleAttrMapper">
<!--返回结果集
       id：唯一标识
       type：返回结果集的数据类型
-->
    <resultMap id="spuSaleAttrMap" type="com.hui.gmall.bean.SpuSaleAttr" autoMapping="true">

        <id property="id" column="id"></id>

        <collection  ofType="com.hui.gmall.bean.SpuSaleAttrValue" property="spuSaleAttrValueList" autoMapping="true">
            <id property="id" column="sale_attr_value_id"></id>
        </collection>

    </resultMap>
<!--    id : 方法名-->
    <select id="selectSpuSaleAttrList" resultMap="spuSaleAttrMap">
        select sa.id ,sa.spu_id, sa.sale_attr_name,sa.sale_attr_id,
        sv.id sale_attr_value_id,
        sv.sale_attr_value_name
        from spu_sale_attr sa inner join spu_sale_attr_value  sv
        on  sa.spu_id=sv.spu_id and sa.sale_attr_id=sv.sale_attr_id
        where  sa.spu_id=#{spu_id}
    </select>
</mapper>
